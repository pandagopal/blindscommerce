# Production Environment Variables Template
# Copy this to .env.production and fill in your actual values

# Database Configuration (AWS RDS)
DB_HOST=your-rds-instance.region.rds.amazonaws.com
DB_PORT=3306
DB_NAME=blindscommerce
DB_USER=admin
DB_PASSWORD=your-secure-rds-password

# JWT Configuration (Generate secure keys)
JWT_SECRET=generate-64-character-secure-secret-here
SESSION_SECRET=generate-another-secure-secret-here

# Next.js Configuration
NODE_ENV=production
NEXTAUTH_SECRET=generate-nextauth-secret-here
NEXTAUTH_URL=https://your-amplify-app-url.amplifyapp.com
NEXT_PUBLIC_API_URL=https://your-amplify-app-url.amplifyapp.com/api
NEXT_PUBLIC_SOCKET_URL=https://your-amplify-app-url.amplifyapp.com:3001

# Email Configuration (AWS SES)
SMTP_HOST=email-smtp.us-east-1.amazonaws.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-ses-smtp-username
SMTP_PASSWORD=your-ses-smtp-password
SMTP_FROM_ADDRESS=noreply@yourdomain.com

# Payment Integration - Production Keys
STRIPE_SECRET_KEY=sk_live_your_stripe_live_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_live_publishable_key

# PayPal Production
NEXT_PUBLIC_PAYPAL_CLIENT_ID=your_paypal_live_client_id
PAYPAL_CLIENT_SECRET=your_paypal_live_client_secret
PAYPAL_ENVIRONMENT=live

# Other Payment Providers (if using)
BRAINTREE_ENVIRONMENT=production
BRAINTREE_MERCHANT_ID=your_braintree_merchant_id
BRAINTREE_PUBLIC_KEY=your_braintree_public_key
BRAINTREE_PRIVATE_KEY=your_braintree_private_key

# Application Settings
SITE_URL=https://your-domain.com
SUPPORT_EMAIL=support@yourdomain.com
UPLOAD_MAX_SIZE=5242880
MOCK_AUTH=false

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_ERROR_REPORTING=true