{
  "name": "blindscommerce-regression-tests",
  "version": "1.0.0",
  "description": "Focused regression prevention test suite for BlindsCommerce",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:api": "jest --testPathPattern=api",
    "test:database": "jest --testPathPattern=database",
    "test:visual": "jest --testPathPattern=visual",
    "test:vendor-dashboard": "jest --testPathPattern=vendor-dashboard",
    "test:vendor-products": "jest --testPathPattern=vendor-dashboard/VendorProducts",
    "test:vendor-discounts": "jest --testPathPattern=vendor-dashboard/VendorDiscounts",
    "test:vendor-sales": "jest --testPathPattern=vendor-dashboard/VendorSalesTeam",
    "test:vendor-orders": "jest --testPathPattern=vendor-dashboard/VendorOrders",
    "test:vendor-analytics": "jest --testPathPattern=vendor-dashboard/VendorAnalytics",
    "test:critical": "jest --testNamePattern='CRITICAL'",
    "test:regression": "jest --testNamePattern='REGRESSION'",
    "test:ci": "jest --coverage --watchAll=false",
    "test:e2e": "playwright test e2e/",
    "test:e2e:ui": "playwright test e2e/ --ui",
    "test:e2e:headed": "playwright test e2e/ --headed",
    "test:e2e:debug": "playwright test e2e/ --debug",
    "test:e2e:minimal": "playwright test e2e/minimal-test.spec.ts",
    "test:e2e:explore": "playwright test e2e/explore-app-structure.spec.ts --reporter=list",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@testing-library/react": "^14.0.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/user-event": "^14.5.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@types/jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "msw": "^2.0.0",
    "axios-mock-adapter": "^1.22.0",
    "mysql2": "^3.14.1",
    "dotenv": "^16.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "typescript": "^5.8.3",
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@babel/preset-react": "^7.22.0",
    "babel-jest": "^29.7.0",
    "@playwright/test": "^1.40.0"
  }
}